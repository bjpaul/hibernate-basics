<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 4.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-4.0.dtd">

<hibernate-configuration>

    <session-factory>

        <!-- Database connection settings -->
        <!-- Names the JDBC Driver class name. -->
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <!-- Names the JDBC connection URL. -->
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/hibernate_db</property>
        <!-- Names the JDBC connection user name. -->
        <property name="hibernate.connection.username">root</property>
        <!-- Names the JDBC connection password. -->
        <property name="hibernate.connection.password">root</property>



    </session-factory>

</hibernate-configuration>